<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#093c6e"
    android:orientation="vertical"
    tools:context=".Dahboard_Screen">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:weightSum="3"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="210dp"
            android:layout_height="70dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/alyantraheader"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="@+id/dashBoard"
            android:background="@drawable/loc"
            android:backgroundTint="#093c6e" />
        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:layout_marginLeft="0dp"
            android:textColor="#093c6e"
            android:textSize="16sp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:textStyle="bold"
            android:onClick="onAddressClicked"
            tools:ignore="OnClick" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:backgroundTint="@color/white"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:background="#FDFCFC"
        android:color="@color/cardview_dark_background" />


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:visibility="gone"
        android:gravity="center"
        android:layout_marginStart="0dp"
        android:textColor="#FCFDFD"
        android:layout_marginTop="0dp"
        android:textSize="24sp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="#093c6e"
        android:weightSum="2"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:queryHint="Search.."
            android:visibility="gone"
            app:iconifiedByDefault="false"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/alyantra_footer"
            android:background="@drawable/searchviewtheme"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="@+id/dashBoard"
                android:background="@drawable/dash"
                android:backgroundTint="#FAFBF8" />

            <TextView
                android:id="@+id/dashBoard"
                android:layout_width="0dp"
                android:text="DASHBOARD"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />
            <ImageView
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="105dp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="@+id/dashBoard"
                android:background="@drawable/loc"
                android:backgroundTint="#FAFBF8" />
            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:layout_weight="1"
                android:layout_marginLeft="165dp"
                android:textColor="#FAFBFB"
                android:textSize="16sp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="0dp"
                android:clickable="true"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:onClick="onAddressClicked"
                tools:ignore="OnClick" />

            <ImageView
                android:visibility="gone"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="0dp"
                app:layout_constraintEnd_toEndOf="@+id/addressTextView"
                android:background="@drawable/search"
                android:backgroundTint="#0E0E0E" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:layout_width="0dp"
            android:gravity="center"
            android:text="DASHBOARD"
            android:visibility="gone"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="0dp"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:text="DASHBOARD"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:orientation="vertical"
          android:layout_height="wrap_content">
          <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Dashboard"
              android:visibility="gone"
              android:layout_marginStart="20dp"
              android:textColor="#FCFDFD"
              android:layout_marginTop="0dp"
              android:textSize="24sp"/>
          <androidx.appcompat.widget.AppCompatTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Welcome to Alyantra Super Speciality Hospital"
              android:layout_marginStart="20dp"
              android:textColor="#F9FBFB"
              android:visibility="gone"
              android:layout_marginTop="0dp"
              android:textSize="16sp"
              android:textStyle="normal" />
      </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/recycler_bg"
        android:orientation="vertical">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:backgroundTint="@color/white"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardElevation="10dp"
            android:layout_margin="30dp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/attendance"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/calendar" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Appointment"
                    android:backgroundTint="@color/white"
                    android:textColor="#101010"
                    android:textSize="16sp"
                    android:textAlignment="center"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            app:cardElevation="10dp"
            android:layout_margin="30dp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/doctors"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/doctors"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Doctors"
                    android:backgroundTint="@color/white"
                    android:textColor="#0E0E0E"
                    android:textSize="16sp"
                    android:textAlignment="center"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:weightSum="2"
        android:backgroundTint="@color/white"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            app:cardElevation="10dp"
            android:layout_margin="30dp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/callAmbulance"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/amb"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ambulance"
                    android:backgroundTint="@color/white"
                    android:textColor="#111212"
                    android:textSize="16sp"
                    android:textAlignment="center"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            app:cardElevation="10dp"
            android:layout_margin="30dp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/pharmacy"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/phormacy" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pharmacy"
                    android:backgroundTint="@color/white"
                    android:textColor="#0E0E0E"
                    android:textSize="16sp"
                    android:textAlignment="center"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>
    </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:weightSum="2"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/address"
                android:backgroundTint="#474945" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:layout_marginLeft="165dp"
                    android:textColor="#00a3bd"
                    android:textSize="18sp"
                    android:layout_marginTop="0dp"
                    android:clickable="true"
                    android:layout_margin="5dp"
                    android:onClick="onAddressClicked"
                    tools:ignore="OnClick" />

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!-- your other views here -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/footer_layout"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="6dp"
                android:weightSum="2"
                app:layout_constraintBottom_toBottomOf="parent">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="Powered By-"
                    android:layout_marginEnd="0dp"
                    android:textColor="#093c6e"
                    android:textStyle="bold"
                    android:textSize="18sp" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:src="@drawable/newtriangle"
                    android:layout_marginTop="0dp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>