<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Priscription_Screen">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#093c6e"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/alyantralogo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prescription Report"
        android:gravity="center"
        android:textColor="#1B1C1C"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="45dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/patientName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Patient's Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="0dp"
            android:background="@drawable/textview_shape"
            />
        <EditText
            android:id="@+id/attendentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Attendent Name"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:background="@drawable/textview_shape"
            />
        <EditText
            android:id="@+id/phoneNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone number"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:inputType="number"
            android:background="@drawable/textview_shape"
            />
        <EditText
            android:id="@+id/emailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Address"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:background="@drawable/textview_shape"
            />
        <EditText
            android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:background="@drawable/textview_shape"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:weightSum="2"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/selectbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attach Report"
                android:textSize="16sp"
                android:textColor="#1B1C1C"
                android:layout_marginTop="0dp"
                android:textStyle="bold"
                android:background="@drawable/textview_shape"/>
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:id="@+id/submitBtn"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginRight="55dp"
            android:layout_marginLeft="55dp"
            android:text="Submit"
            android:background="@drawable/button_shape2"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- your other views here -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/footer_layout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="6dp"
            android:weightSum="2"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="Powered By-"
                android:layout_marginEnd="10dp"
                android:textColor="#093c6e"
                android:textStyle="bold"
                android:textSize="18sp" />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@color/white"
                android:src="@drawable/newtriangle"
                android:layout_marginTop="0dp"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.LinearLayoutCompat>